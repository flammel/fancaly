{
  "name": "fancaly",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "parcel app/index.html",
    "prettier": "prettier --write .babelrc *.json lib/*.ts app/*.ts app/*.scss tests/*.ts app/manifest.webmanifest",
    "test": "TZ=UTC jest",
    "coverage": "jest --coverage",
    "lint": "tslint --project tsconfig.json -c tslint.json 'lib/*.ts' 'app/*.ts' 'tests/*.ts'",
    "lintfix": "tslint --project tsconfig.json --fix -c tslint.json 'src/*.ts' 'app/*.ts' 'tests/*.ts'",
    "build": "parcel build app/index.html --public-url ./",
    "typecheck": "tsc --noEmit -p ./tsconfig.json",
    "check": "npm run prettier; npm run lintfix; npm run lint; npm run typecheck"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.2.0",
    "jest": "^24.5.0",
    "jest-date-mock": "^1.0.7",
    "node-sass": "^4.11.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-sonarts": "^1.9",
    "typescript": "^3.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://localhost/",
    "testRegex": "(/tests/.*\\.test\\.ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "bignumber.js": "^6.0.0"
  }
}
